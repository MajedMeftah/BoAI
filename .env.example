# إعدادات البيئة لـ BoAI
# انسخ هذا الملف إلى .env وعدل القيم حسب الحاجة

# الإعدادات العامة
DEBUG=True
ENVIRONMENT=development

# إعدادات الخادم
HOST=0.0.0.0
PORT=8000

# إعدادات قاعدة البيانات
DATABASE_URL=postgresql://boai:boai@localhost:5432/boai
REDIS_URL=redis://localhost:6379/0

# إعدادات الأمان
SECRET_KEY=change-me-in-production-very-long-and-complex-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# إعدادات CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# إعدادات ML والنماذج
MODELS_DIR=models
DEFAULT_MODEL=programming_tutor
DEFAULT_MODEL_VERSION=v1.0

# إعدادات التخزين المؤقت
CACHE_TTL=300
RATE_LIMIT_PER_MINUTE=60

# إعدادات التطوير
LOG_LEVEL=INFO
RELOAD=True

# إعدادات خارجية (اختيارية)
# OPENAI_API_KEY=your-openai-api-key-here
# HUGGINGFACE_TOKEN=your-huggingface-token-here
# GOOGLE_TRANSLATE_KEY=your-google-translate-key-here
