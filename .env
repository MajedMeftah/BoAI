# Environment settings for BoAI
# Copy this file to .env and modify values as needed

# General settings
DEBUG=True
ENVIRONMENT=development

# Server settings
HOST=0.0.0.0
PORT=8000

# Database settings
DATABASE_URL=postgresql://boai:boai@localhost:5432/boai
REDIS_URL=redis://localhost:6379/0

# Security settings
SECRET_KEY=change-me-in-production-very-long-and-complex-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS settings (handled in config.py)
# CORS_ORIGINS=http://localhost:3000,http://localhost:8000
# ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# ML and models settings
MODELS_DIR=models
DEFAULT_MODEL=programming_tutor
DEFAULT_MODEL_VERSION=v1.0

# Cache settings
CACHE_TTL=300
RATE_LIMIT_PER_MINUTE=60

# Development settings
LOG_LEVEL=INFO
RELOAD=True

# External settings (optional)
# OPENAI_API_KEY=your-openai-api-key-here
# HUGGINGFACE_TOKEN=your-huggingface-token-here
# GOOGLE_TRANSLATE_API_KEY=your-google-translate-key-here
